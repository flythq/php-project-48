{
  "name": "hexlet/code",
  "description": "Difference calculator",
  "bin": ["bin/gendiff"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Andrey Nikolaenkov",
      "email": "nichexplore@gmail.com"
    }
  ],
  "autoload": {
    "files": [
      "src/Differ.php",
      "src/DataUtilities.php",
      "src/Parser.php",
      "src/Formatters.php",
      "src/Formatters/Stylish.php",
      "src/Formatters/Json.php",
      "src/Formatters/Plain.php"
    ]
  },
  "require": {
